---
import { ArrowLeft, ArrowRight } from '@lucide/astro'

interface Props {
  dir: 'prev'|'next'
  item: { title:string, href:string } | null
  transition: string
}

const { dir, item, transition } = Astro.props
const isPrev = dir === 'prev'
const disabled = !item
const href = item ? item.href : undefined
const title = item ? item.title : undefined
---

<a
  class={`btn ${dir} ${disabled ? 'disabled' : ''}`}
  href={ href && `../${href}`} title={title}
  transition:name={transition}
  aria-disabled={disabled}
>
  {isPrev && <ArrowLeft />}
  <slot />
  {!isPrev && <ArrowRight />}
</a>