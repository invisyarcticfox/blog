---
interface Props {
	date: Date
	time?: boolean
}

const { date, time = false } = Astro.props
---

<time datetime={date.toISOString()}>
	{
		time
			? `${date.toLocaleDateString('en-GB', {
					year: 'numeric',
					month: 'long',
					day: 'numeric'
				})}, ${date.toLocaleTimeString('en-GB', {
					hour: '2-digit',
					minute: '2-digit',
					hour12: true,
				})}`
			: date.toLocaleDateString('en-GB', {
					year: 'numeric',
					month: 'long',
					day: 'numeric'
				})
	}
</time>