---
interface Props {
	date: Date
	showTime?: boolean
}

const { date, showTime = false } = Astro.props
---

<time datetime={date.toISOString()}>
	{
		showTime
			? `${date.toLocaleDateString('en-GB', {
					year: 'numeric',
					month: 'long',
					day: 'numeric'
				})}, ${date.toLocaleTimeString('en-GB', {
					hour: '2-digit',
					minute: '2-digit',
					hour12: false,
				})}`
			: date.toLocaleDateString('en-GB', {
					year: 'numeric',
					month: 'long',
					day: 'numeric'
				})
	}
</time>